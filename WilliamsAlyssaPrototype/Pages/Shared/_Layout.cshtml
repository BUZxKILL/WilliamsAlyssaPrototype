<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WilliamsAlyssaPrototype</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WilliamsAlyssaPrototype.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light my-bg-light">
            <div class="container p-0">
                <div class="logocontainer">
                    <a class="navbar-brand" asp-area="" asp-page="/Home"> <img src="images/JJLogo.png" alt="Jesse James Lawn Care Logo" class="img-fluid" /> </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Home" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Services">Services</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/AboutUs" tabindex="-1">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Admin" tabindex="-1">Admin</a>
                        </li>

                        @*Nav links for account page... still need to work out the logistics of this with the back-end build.*@

                       @* <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle navtext" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                My Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item droptext" href="#">Sign-Up</a></li>
                                <li><a class="dropdown-item droptext" href="#">Log-In</a></li>
                                <li><a class="dropdown-item droptext" href="#" aria-disabled="true">Logout (disabled)</a></li>
                                <li><a class="dropdown-item droptext" href="#" aria-disabled="true">Maintain Services/Schedule (disabled)</a></li>
                            </ul>
                        </li>*@
                    </ul>

                    @*Search Bar*@

                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @*Footer - contact info*@

    <footer>
        <div class="row my-footer">
            <div class="col-sm-12 contactinfo">
                <h6>Jesse James Lawncare</h6>
                <h6>Tulsa,OK</h6>
                <h6>(918)-896-2543</h6>
                <h6>jessejameslawncare@gmail.com</h6>
                <a href="https://www.facebook.com/JesseJamesLawnCare918" target="_blank"><img src="~/images/fb.svg" /></a>              
                <a href="mailto:jessejameslawncare@gmail.com" target="_blank"> <img src="~/images/mail.svg" /></a>
            </div>
           @* <div class="sm-col-6 footerlinks">
                <a class="nav-link text-light" asp-area="" asp-page="/Home" aria-current="page">Home</a>
                <a class="nav-link text-light" asp-area="" asp-page="/Services">Services</a>
                <a class="nav-link text-light" asp-area="" asp-page="/AboutUs">About Us</a>
                <a class="nav-link text-light" asp-area="" asp-page="/Admin">Admin</a>
            </div>*@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>