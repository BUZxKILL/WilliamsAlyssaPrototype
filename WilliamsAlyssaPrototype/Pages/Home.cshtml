@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*Header Row - Image & Intro-Text/Call-To-Action*@

<div class="row header">
    <div class="col-sm-12 headertextbkgrnd">
        <div class="headertxt">
            <h1>
                Jesse James Lawncare
            </h1>
            <h3>
                Family-Owned and Operated Lawn Care Services for Tulsa
            </h3>
            <br />
            <button type="button" class="btn-success btn-lg">Request a quote today!</button>
        </div>
    </div>
</div>

@*Divider for next section w/ images*@

<div class="row whydivider">

    <h2 class="secondtitle">Why Choose Us?</h2>

</div>


@* 1 Row - 3 columns 4 wide for images & text under Why Choose Us?*@

<div class="row">
    <div class="col-sm-4 mt-4">
        <img src="images/Mower.jpg" alt="Lawn Mower" class="img-fluid" />

        <h4 class="hometextheader">
            Professional Grade Equipment
        </h4>
        <p>
            We understand that your time and your money is important. That is why we use professional level equipment to get the job done in a timely and efficient manner.
        </p>
    </div>
    <div class="col-sm-4 mt-4">
        <img src="images/Seasons.jpg" alt="Changing Seasons" class="img-fluid" />
        <h4 class="hometextheader">
            Services for Every Season
        </h4>
        <p>
            We offer services for all of your lawn care needs for every season. Whether it is mowing your grass in the summer, cleaning out your gutters in the spring,
            cleaning up your leaves in the fall, or hanging up your christmas lights in the winter - we are here for you!
        </p>
    </div>
    <div class="col-sm-4 mt-4">

        <img src="images/Schedule.jpg" alt="Woman Scheduling" class="img-fluid" />
        <h4 class="hometextheader">
            Flexible Scheduling
        </h4>
        <p>
            Schedule your services with us on a bi-weekly, weekly, and even monthly for some of our services. Don't want to be on a schedule?
            That works for us! We can perform most services on an as-needed basis.
        </p>
    </div>

</div>

@*Second Call to Action Button - link to services page*@

<div class="row homeservicesbanner">
    <div class="col-sm-12">
        <button type="button" class="btn btn-success btn-lg">
            <h4> Check out our Services </h4>
        </button>

    </div>
</div>

@*Carousel - Before & After Pictures*@

<div class="row carouselbackgrnd">
    <div class="col-sm-12 carouselcol">
        @* The name of the ID must be unique on the page. No spaces allowed in the name. *@
        @* The "slide" class is the visual affect when the images transition from
        one to another. *@
        <div id="jjlawncarecarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">

            @* Indicators/Dots *@
            <div class="carousel-indicators">
                @* Add a button tag for each picture in your carousel.
                Only ONE of the buttons should have a class="active".

                The buttons are zero-index-based so the first image
                has a data-bs-slide-to of '0', the 2nd image is '1', etc. *@
                <button type="button" data-bs-target="#jjlawncarecarousel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#jjlawncarecarousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#jjlawncarecarousel" data-bs-slide-to="2"></button>
            </div>

            @* The slideshow/carousel  *@
            <div class="carousel-inner">
                @* Only one of the images should be 'active' and it should correspond
                to the images. *@

                @* Duplicate the div because without the 'active' for any other images. *@
                <div class="carousel-item active p-0">
                    <img src="~/images/before-after-0.png" alt="Mowing Before and After Picture" class="img-fluid d-flex mx-auto" />

                </div>

                <div class="carousel-item">
                    <img src="~/images/Before-After-1.png" alt="Leave Cleanup Before and After Picture " class="img-fluid d-flex mx-auto" />
                </div>

                <div class="carousel-item">
                    <img src="~/images/Before-After-2.png" alt="Mowing Before and After Picture" class="img-fluid d-flex mx-auto" />
                </div>

            </div>

            @* Left and right controls/icons
            @* The data-bs-target has to be the name used in the ID of the carousel
            with a '#' in front of the name.*@
            <button class="carousel-control-prev" type="button" data-bs-target="#jjlawncarecarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#jjlawncarecarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
</div>







